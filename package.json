{
  "name": "node-server",
  "version": "1.0.0",
  "description": "Node server boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:dev": "DEBUG=server node_modules/.bin/nodemon index.js --ignore test-db.json",
    "json-server": "json-server --watch test-db.json --port 3001",
    "lint": "node_modules/.bin/eslint ./server --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "keywords": [
    "node",
    "js",
    "server",
    "boilerplate"
  ],
  "author": "Amr Labib",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.2",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "json-server": "^0.12.1",
    "mongoose": "^5.0.9"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "husky": "^1.0.0-rc.4",
    "nodemon": "^1.15.1"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*"
    ]
  }
}
